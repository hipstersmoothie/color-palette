{
  "name": "color-palette",
  "version": "0.0.0",
  "description": "A utility for choosing a color palette for you website.",
  "author": {
    "name": "Andrew Lisowski",
    "email": "lisowski54@gmail.com"
  },
  "scripts": {
    "test": "jest",
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "build:typescript": "tsc",
    "lint": "tslint -p . --format stylish"
  },
  "devDependencies": {
    "husky": "^1.1.3",
    "jest": "^23.6.0",
    "lint-staged": "^8.0.4",
    "prettier": "^1.15.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-react": "^3.6.0",
    "tslint-xo": "^0.9.0"
  },
  "prettier": {
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.1.5",
    "@types/file-saver": "^2.0.0",
    "@types/react": "^16.7.1",
    "@types/react-color": "^2.13.6",
    "@types/styled-jsx": "^2.2.7",
    "@types/tinycolor2": "^1.4.1",
    "@zeit/next-css": "^1.0.1",
    "@zeit/next-typescript": "^1.1.1",
    "bulma-badge": "^2.0.0",
    "fast-clone": "^1.5.3",
    "file-saver": "^2.0.0-rc.4",
    "font-color-contrast": "^1.0.3",
    "mix-color": "^1.0.3",
    "next": "^7.0.2",
    "react": "^16.6.1",
    "react-color": "^2.14.1",
    "react-dom": "^16.6.1",
    "tinycolor2": "^1.4.1",
    "typescript": "^3.1.6",
    "webpack": "^4.25.1"
  },
  "babel": {
    "presets": [
      "next/babel",
      "@zeit/next-typescript/babel"
    ]
  },
  "license": "MIT"
}
